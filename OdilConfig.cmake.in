# - Config file for the Odil package
# It defines the following variables
#  ODIL_INCLUDE_DIRS - include directories for Odil
#  ODIL_LIBRARIES    - libraries to link against

get_filename_component(ODIL_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
set(ODIL_INCLUDE_DIRS "@CONF_INCLUDE_DIRS@")

# Our library dependencies (contains definitions for IMPORTED targets)
if(NOT TARGET libodil AND NOT Odil_BINARY_DIR)
  include("${ODIL_CMAKE_DIR}/OdilTargets.cmake")
endif()

set(ODIL_LIBRARIES libodil)
